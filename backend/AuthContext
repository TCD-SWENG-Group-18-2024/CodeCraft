const isLoggedIn = true; // or false, based on your logic
const userEmail = 'user@example.com'; // Fetch the user's email from wherever it's stored when logged in

// JSON data to send in the request
const requestData = {
  use_case: 'your_use_case',
  ai_model: 'your_ai_model',
  input_language: 'your_input_language',
  output_language: 'your_output_language',
  user_input: 'user_input_text',
  email: isLoggedIn ? userEmail : '' // Include user's email if logged in
};

// Make a request to the Flask backend
fetch('/llm/text', {
  method: 'POST',
  headers: {
    'Content-Type': 'application/json',
    'Authorization': isLoggedIn ? 'Bearer token' : '' // Send token if logged in
  },
  body: JSON.stringify(requestData)
})
.then(response => response.json())
.then(data => console.log(data))
.catch(error => console.error('Error:', error));
